---
import BaseLayout from '../layouts/BaseLayout.astro';
import {Icon} from 'astro-icon/components';
const interests = ["DAO", "DeFi", "NFT", "Web3 Identity & Data Ecosystems"];
const contact = {
  phone_number: "0746613636",
  email: "dorultanianos@gmail.com",
  github: "https://github.com/igdev0",
  linkedin: "https://www.linkedin.com/in/ianos-dorultan-364235143"
};
---
<BaseLayout title="Personal website - Dorultan Ianos" description="Experienced developer in both front and backend development within react, node and rust ecosystem.">
    <div class="bg-white dark:bg-slate-800 rounded-lg px-6 py-8 shadow-xl max-w-2xl mx-auto my-auto ab">
        <div class="flex justify-start items-center gap-2 self-end">
            <div>
    <span class="inline-flex items-end justify-center bg-indigo-500 rounded-md shadow-lg w-20 h-20">
		<img class="w-50" src="/avatar.png" alt="Ianos dorultan"/>
    </span>
            </div>
            <div>
                <h1 class="text-slate-900 dark:text-white mt-2 text-2xl font-bold tracking-tight">Ianos Dorultan</h1>
                <h2 class="text-slate-700 dark:text-white mt-0 text-md font-medium tracking-tight">Software
                    developer</h2>
            </div>
        </div>
        <p class="text-slate-500 dark:text-white mt-2 text-md">
            Experienced developer in both front and backend development within react, node and rust
            ecosystem. Interested
            in: {interests.map((i, idx) => (
                <span class="text-slate-800 dark:text-blue-200 font-medium">{i + (idx !== interests.length - 1 ? "," : ".")} </span>))}
        </p>
        <div class="flex justify-end gap-2 pt-2">
            <a href={contact.linkedin} target="_blank" class="rounded-full p-2 bg-gray-100 dark:bg-white"
               rel="noreferrer">
                <Icon name="linkedin-brands-solid" size="30"/>
            </a>
            <a href={contact.github} class="rounded-full p-2 bg-gray-100 dark:bg-white" target="_blank">
                <Icon name="github-brands-solid" size="30"/>
            </a>
            <a href={`mailto:${contact.email}`} class="rounded-full p-2 bg-gray-100 dark:bg-white" target="_blank">
                <Icon name="envelope-solid" size="30"/>
            </a>
        </div>
    </div>
</BaseLayout>